<Window x:Class="Eyeplayer.VisualKeyboardCapture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisualKeyboardCapture"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent" 
        Topmost="True" WindowState="Maximized" Loaded="Window_Loaded"
        >
    <Grid>
        <Canvas x:Name="canvas" />
        <Image x:Name="imgCapture" Width="300" Height="300" Stretch="Fill"/>
    </Grid>
</Window>
